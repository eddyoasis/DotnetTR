@model TradingLimitMVC.Models.PurchaseOrder
@{
    ViewData["Title"] = "Purchase Order Details";
}
<style>
    .details-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    .main-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 1400px;
        overflow: hidden;
    }

    .header-section {
        background: linear-gradient(135deg, #0066cc, #004499);
        color: white;
        padding: 30px;
        text-align: center;
    }

        .header-section h1 {
            margin: 0 0 10px 0;
            font-size: 32px;
            font-weight: 700;
        }

    .po-reference {
        font-size: 20px;
        margin: 10px 0;
        opacity: 0.95;
    }

    .status-badge {
        display: inline-block;
        background: white;
        color: #0066cc;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        margin-top: 10px;
    }

    .pr-link-banner {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
        padding: 20px 30px;
        margin: 0;
    }

        .pr-link-banner a {
            color: white;
            text-decoration: underline;
            font-weight: 600;
        }

            .pr-link-banner a:hover {
                color: #e0f7ff;
            }

    .content-section {
        padding: 30px;
    }

    .section-title {
        color: #0066cc;
        font-size: 22px;
        font-weight: 700;
        margin: 30px 0 20px 0;
        padding-bottom: 10px;
        border-bottom: 3px solid #0066cc;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #0066cc;
    }

        .info-card h6 {
            color: #0066cc;
            font-weight: 700;
            font-size: 16px;
            margin-bottom: 15px;
        }

    .info-row {
        margin-bottom: 12px;
        line-height: 1.6;
    }

    .info-label {
        font-weight: 600;
        color: #495057;
        display: inline-block;
        min-width: 140px;
    }

    .info-value {
        color: #212529;
    }

    .items-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

        .items-table thead {
            background: linear-gradient(135deg, #0066cc, #004499);
            color: white;
        }

        .items-table th {
            padding: 15px 12px;
            text-align: center;
            font-weight: 600;
            font-size: 14px;
        }

        .items-table td {
            padding: 12px;
            border-bottom: 1px solid #dee2e6;
            text-align: center;
            font-size: 14px;
        }

        .items-table tbody tr:hover {
            background: #f8f9fa;
        }

        .items-table tbody tr:last-child td {
            border-bottom: none;
        }

        .items-table tfoot {
            background: #0066cc;
            color: white;
            font-weight: 700;
            font-size: 16px;
        }

            .items-table tfoot td {
                padding: 15px;
                border: none;
            }

    .department-section {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 10px;
        margin-bottom: 20px;
        border: 2px solid #dee2e6;
    }

        .department-section h6 {
            color: #0066cc;
            font-weight: 700;
            margin-bottom: 20px;
            font-size: 18px;
            padding-bottom: 10px;
            border-bottom: 2px solid #0066cc;
        }

    .department-info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        padding: 30px;
        background: #f8f9fa;
        border-radius: 0 0 15px 15px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-back {
        background: #6c757d;
        color: white;
    }

        .btn-back:hover {
            background: #5a6268;
            transform: translateY(-2px);
            color: white;
        }

    .btn-pdf {
        background: #dc3545;
        color: white;
    }

        .btn-pdf:hover {
            background: #c82333;
            transform: translateY(-2px);
            color: white;
        }

    .btn-edit {
        background: #ffc107;
        color: #212529;
    }

        .btn-edit:hover {
            background: #e0a800;
            transform: translateY(-2px);
        }

    .btn-submit {
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            color: white;
        }

    .pending-approval-banner {
        background: #fff3cd;
        border-left: 5px solid #ffc107;
        padding: 20px;
        margin: 20px 30px;
        border-radius: 8px;
    }

        .pending-approval-banner h5 {
            color: #856404;
            margin-bottom: 12px;
            font-size: 18px;
        }

        .pending-approval-banner p {
            margin: 8px 0;
            color: #856404;
        }
</style>

<div class="details-container">
    <div class="container">
        <div class="main-card">
            <!-- Header -->
            <div class="header-section">
                <h1>Purchase Order Details</h1>
                <div class="po-reference">@Model.POReference</div>
                @if (!string.IsNullOrEmpty(Model.POStatus))
                {
                    <span class="status-badge">@Model.POStatus</span>
                }
            </div>

            <!-- PR Link Banner -->
            @if (Model.PurchaseRequisitionId.HasValue && Model.PurchaseRequisition != null)
            {
                <div class="pr-link-banner">
                    <i class="fas fa-link"></i>
                    <strong>Generated from PR:</strong>
                    <a asp-controller="PurchaseRequisition" asp-action="Details" asp-route-id="@Model.PurchaseRequisitionId">
                        @Model.PRReference
                    </a>
                    | Approved: @Model.PurchaseRequisition.FinalApprovalDate?.ToString("MMM dd, yyyy")
                    | Total: @Model.PurchaseRequisition.TotalAmount.ToString("C")
                </div>
            }

            <!-- Pending Approval Status -->
            @if (Model.POStatus == "Submitted" && Model.WorkflowSteps?.Any() == true)
            {
                <div class="pending-approval-banner">
                    <h5><i class="fas fa-exclamation-triangle"></i> Pending Approval</h5>
                    <p><strong>Current Step:</strong> @Model.CurrentApprovalStep of @Model.TotalApprovalSteps</p>
                    @{
                        var pendingStep = Model.WorkflowSteps.FirstOrDefault(s => s.Status == ApprovalStatus.Pending);
                        if (pendingStep != null)
                        {
                            <p><strong>Awaiting approval from:</strong> @pendingStep.ApproverName (@pendingStep.ApproverRole)</p>
                        }
                    }
                </div>
            }

            <!-- Content Section -->
            <div class="content-section">
                <!-- Order Information -->
                <h4 class="section-title">Order Information</h4>
                <div class="info-grid">
                    <div class="info-card">
                        <h6>Purchase Order Details</h6>
                        <div class="info-row">
