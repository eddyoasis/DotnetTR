                            <span class="info-value">@Model.POReference</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">PO Number:</span>
                            <span class="info-value">@Model.PONo</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Issue Date:</span>
                            <span class="info-value">@Model.IssueDate.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Delivery Date:</span>
                            <span class="info-value">@(Model.DeliveryDate?.ToString("MMM dd, yyyy") ?? "N/A")</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">Created:</span>
                            <span class="info-value">@Model.CreatedDate.ToString("MMM dd, yyyy HH:mm")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.POOriginator))
                        {
                            <div class="info-row">
                                <span class="info-label">PO Originator:</span>
                                <span class="info-value">@Model.POOriginator</span>
                            </div>
                        }
                    </div>

                    <div class="info-card">
                        <h6>Vendor Information</h6>
                        <div class="info-row">
                            <span class="info-label">Vendor:</span>
                            <span class="info-value">@(ViewBag.VendorName ?? Model.Vendor ?? "N/A")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(ViewBag.VendorAddress as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Address:</span>
                                <span class="info-value">@ViewBag.VendorAddress</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.VendorAttention as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Attn:</span>
                                <span class="info-value">@ViewBag.VendorAttention</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.VendorPhone as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Tel No:</span>
                                <span class="info-value">@ViewBag.VendorPhone</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.VendorFax as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Fax No:</span>
                                <span class="info-value">@ViewBag.VendorFax</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.VendorEmail as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Email:</span>
                                <span class="info-value">@ViewBag.VendorEmail</span>
                            </div>
                        }
                        <div class="info-row">
                            <span class="info-label">Company:</span>
                            <span class="info-value">@Model.Company</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.PaymentTerms))
                        {
                            <div class="info-row">
                                <span class="info-label">Payment Terms (Days):</span>
                                <span class="info-value">@Model.PaymentTerms</span>
                            </div>
                        }
                        <div class="info-row">
                            <span class="info-label">Status:</span>
                            <span class="info-value"><strong>@Model.POStatus</strong></span>
                        </div>
                    </div>

                    <div class="info-card">
                        <h6>Contact & Delivery Information</h6>
                        @if (!string.IsNullOrEmpty(ViewBag.CompanyFullAddress as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Delivery Address:</span>
                                <span class="info-value">@ViewBag.CompanyFullAddress</span>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(Model.DeliveryAddress))
                        {
                            <div class="info-row">
                                <span class="info-label">Delivery Address:</span>
                                <span class="info-value">@Model.DeliveryAddress</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.PRContactPerson as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Attn:</span>
                                <span class="info-value">@ViewBag.PRContactPerson</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.PRContactPhone as string))
                        {
                            <div class="info-row">
                                <span class="info-label">Tel No:</span>
                                <span class="info-value">@ViewBag.PRContactPhone</span>
                            </div>
                        }

                    </div>
