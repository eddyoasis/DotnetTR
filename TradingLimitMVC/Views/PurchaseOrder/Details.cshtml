                <!-- Purchase Items -->
                @if (Model.Items?.Any() == true)
                {
                    <h4 class="section-title">Purchase Items (@Model.Items.Count)</h4>
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th>Description</th>
                                <th style="width: 100px;">Quantity</th>
                                <th style="width: 120px;">Unit Price</th>
                                <th style="width: 100px;">Discount</th>
                                <th style="width: 80px;">GST</th>
                                <th style="width: 120px;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int idx = 1;
                                decimal subtotal = 0;
                            }
                            @foreach (var item in Model.Items)
                            {
                                // Calculate item subtotal before GST
                                var itemSubtotal = item.Quantity * item.UnitPrice;
                                var discount = item.DiscountPercent > 0
                                ? (itemSubtotal * item.DiscountPercent / 100)
                                : item.DiscountAmount;
                                var amountBeforeGST = itemSubtotal - discount;
                                subtotal += amountBeforeGST;
                                <tr>
                                    <td>@idx</td>
                                    <td style="text-align: left; padding-left: 15px;">@item.Description</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("C")</td>
                                    <td>
                                        @if (item.DiscountPercent > 0)
                                        {
                                            <text>@item.DiscountPercent%</text>
                                        }
                                        else if (item.DiscountAmount > 0)
                                        {
                                            <text>@item.DiscountAmount.ToString("C")</text>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </td>
                                    <td>@(item.GST ?? "0%")</td>
                                    <td><strong>@amountBeforeGST.ToString("C")</strong></td>
                                </tr>
                                idx++;
                            }
                        </tbody>
                        <tfoot>
                            @{
                                // Calculate GST on subtotal
                                var firstItem = Model.Items.FirstOrDefault();
                                var gstRate = 0m;
                                if (firstItem != null && !string.IsNullOrEmpty(firstItem.GST))
                                {
                                    var gstString = firstItem.GST.Replace("%", "").Trim();
                                    decimal.TryParse(gstString, out gstRate);
                                }
                                var gstAmount = subtotal * (gstRate / 100);
                                var grandTotal = subtotal + gstAmount;
                            }
                            @if (gstRate > 0)
                            {
                                <tr>
                                    <td colspan="6" style="text-align: right;">GST (@gstRate%):</td>
                                    <td>@gstAmount.ToString("C")</td>
                                </tr>
                            }
                            <tr style="background: #004499; color: white; font-weight: bold;">
                                <td colspan="6" style="text-align: right;">Total Amount:</td>
                                <td>@grandTotal.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                }

                <!-- Additional Remarks -->
                @if (!string.IsNullOrEmpty(Model.Remarks))
                {
                    <h4 class="section-title">Additional Remarks</h4>
                    <div class="info-card">
                        <p style="margin: 0; line-height: 1.6;">@Model.Remarks</p>
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a href="@Url.Action("Index", "PurchaseOrder")" class="btn-action btn-back">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>

                <a href="@Url.Action("DownloadPDF", new { id = Model.Id })" class="btn-action btn-pdf">
                    <i class="fas fa-file-pdf"></i> Download PDF
                </a>

                @if (Model.POStatus == "Draft")
                {
                    @*  <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn-action btn-edit">
                        <i class="fas fa-edit"></i> Edit PO
                    </a> *@
                }
            </div>
        </div>
    </div>
</div>