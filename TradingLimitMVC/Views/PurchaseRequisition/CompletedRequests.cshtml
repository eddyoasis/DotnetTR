@model IEnumerable<TradingLimitMVC.Models.PurchaseRequisition>

@{
    ViewData["Title"] = "Completed Purchase Requests";
}

<style>
    .completed-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 20px 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: 20px 0;
    }

    .header-section {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        padding: 25px;
        text-align: center;
    }

    .completed-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        margin-top: 20px;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .completed-table thead th {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 15px 10px;
            text-align: center;
            font-weight: 600;
            border: none;
            font-size: 13px;
        }

        .completed-table tbody td {
            padding: 15px 10px;
            border-bottom: 1px solid #dee2e6;
            text-align: center;
            vertical-align: middle;
        }

        .completed-table tbody tr {
            background: white;
        }

            .completed-table tbody tr:nth-child(even) {
                background: #f8f9fa;
            }

            .completed-table tbody tr:hover {
                background: #e3f2fd;
            }

    .btn-create-po {
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-create-po:hover {
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
        }

    .btn-view {
        background: linear-gradient(45deg, #007bff, #0056b3);
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        margin-right: 5px;
    }

        .btn-view:hover {
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
        }

    .po-status {
        padding: 4px 8px;
        border-radius: 15px;
        font-size: 11px;
        font-weight: 600;
    }

    .po-generated {
        background: #d4edda;
        color: #155724;
    }

    .po-pending {
        background: #fff3cd;
        color: #856404;
    }
</style>

<div class="completed-container">
    <div class="container">
        <div class="main-card">
            <!-- Header -->
            <div class="header-section">
                <h1 style="font-size: 28px; font-weight: 700; margin: 0; text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);">Completed Purchase Requests</h1>
                <p style="margin: 10px 0 0 0; opacity: 0.9;">Approved purchase requisitions ready for purchase order creation</p>
            </div>


            <!-- Table Container -->
            <div style="padding: 25px;">
                @if (Model.Any())
                {
                    <table class="completed-table">
                        <thead>
                            <tr>
                                <th>PR Reference</th>
                                <th>Company</th>
                                <th>Department</th>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Approved Date</th>
                                <th>Final Approver</th>
                                <th>PO Reference</th>
                                <th>PO Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(pr => pr.FinalApprovalDate))
                            {
                                <tr>
                                    <td style="font-weight: bold; color: #007bff;">@item.PRReference</td>
                                    <td>@item.Company</td>
                                    <td>@item.Department</td>
                                    <td style="text-align: left; padding-left: 15px;">@item.ShortDescription</td>
                                    @* <td style="font-weight: bold; color: #333;">@item.TotalAmount.ToString("C")</td> *@
                                    <td style="font-weight: bold; color: #333;">
                                        @item.QuotationCurrency @item.TotalAmount.ToString("N2")
                                        <br>
                                        <small style="color: #666; font-weight: normal;">
                                            (SGD @item.ContractValueSGD.ToString("N2"))
                                        </small>
                                    </td>
                                    <td>@(item.FinalApprovalDate?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                                    <td>@item.FinalApprover</td>
                                    <td>@(item.POReference ?? "-")</td>
                                    <td>
                                        @if (item.POGenerated)
                                        {
                                            <span class="po-status po-generated">Generated</span>
                                        }
                                        else
                                        {
                                            <span class="po-status po-pending">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="PurchaseRequisition" asp-action="Details" asp-route-id="@item.Id" class="btn-view">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        @if (!item.POGenerated)
                                        {
                                            @* <a asp-controller="PurchaseOrder" asp-action="CreateFromPR" asp-route-prId="@item.Id" class="btn-create-po">
                                            <i class="fas fa-plus"></i> Create PO
                                        </a> *@

                                            <a asp-controller="PurchaseOrder" asp-action="CreateFromPR" asp-route-prId="@item.Id"
                                               class="btn-create-po">
                                                <i class="fas fa-plus"></i> Create PO
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div style="text-align: center; padding: 60px 20px; color: #6c757d;">
                        <i class="fas fa-clipboard-check" style="font-size: 4rem; margin-bottom: 20px; opacity: 0.5;"></i>
                        <h4>No Completed Requests</h4>
                        <p>No approved purchase requisitions found.</p>
                    </div>
                }
            </div>
        </div>
    </div>


</div>




