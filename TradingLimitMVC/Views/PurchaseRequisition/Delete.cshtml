@model TradingLimitMVC.Models.PurchaseRequisition

@{
    ViewData["Title"] = "Delete Purchase Requisition";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-danger"><i class="fas fa-trash me-2"></i>Delete Purchase Requisition</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle me-2"></i>
    <strong>Warning!</strong> Are you sure you want to delete this Purchase Requisition? This action cannot be undone.
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <i class="fas fa-file-alt me-2"></i>Purchase Requisition Details
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-5">PR Reference:</dt>
                    <dd class="col-sm-7"><strong>@Html.DisplayFor(model => model.PRReference)</strong></dd>


                    <dt class="col-sm-5">Company:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Company)</dd>

                    <dt class="col-sm-5">Department:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.Department)</dd>

                    <dt class="col-sm-5">Purchase Type:</dt>
                    <dd class="col-sm-7">@Html.DisplayFor(model => model.TypeOfPurchase)</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-6">Expected Delivery:</dt>
                    <dd class="col-sm-6">
                        @if (Model.ExpectedDeliveryDate.HasValue)
                        {
                            @Model.ExpectedDeliveryDate.Value.ToString("MMM dd, yyyy")
                        }
                    </dd>

                    <dt class="col-sm-6">Created Date:</dt>
                    <dd class="col-sm-6">@Model.CreatedDate.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-6">Currency:</dt>
                    <dd class="col-sm-6">@Html.DisplayFor(model => model.QuotationCurrency)</dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ShortDescription))
        {
            <div class="mt-3">
                <strong>Description:</strong>
                <p>@Html.DisplayFor(model => model.ShortDescription)</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Reason))
        {
            <div class="mt-3">
                <strong>Reason:</strong>
                <p>@Html.DisplayFor(model => model.Reason)</p>
            </div>
        }
    </div>


</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-end gap-3">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Cancel
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Delete Purchase Requisition
        </button>
    </div>
</form>