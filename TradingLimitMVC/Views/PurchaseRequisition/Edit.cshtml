@model TradingLimitMVC.Models.PurchaseRequisition

@{
    ViewData["Title"] = "Edit Purchase Requisition";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-edit me-2"></i>Edit Purchase Requisition</h2>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="fas fa-eye me-2"></i>View Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PRReference" />
    <input type="hidden" asp-for="PRInternalNo" />
    <input type="hidden" asp-for="CreatedDate" />


    <!-- PR Reference Display -->
    <div class="alert alert-info">
        <div class="row">
            <div class="col-md-6">
                <strong>PR Reference:</strong> @Model.PRReference
            </div>
            <div class="col-md-6">
                <strong>Created Date:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy")
            </div>
        </div>
    </div>

    <!-- Request Details Section -->
    <div class="form-section">
        <h4 class="section-title"><i class="fas fa-info-circle me-2"></i>Request Details</h4>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Company" class="form-label required-field">Company</label>
                    <select asp-for="Company" class="form-select" asp-items="@(new SelectList(ViewBag.Companies))">
                        <option value="">Select Company</option>
                    </select>
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Department" class="form-label required-field">Department</label>
                    <select asp-for="Department" class="form-select" asp-items="@(new SelectList(ViewBag.Departments))">
                        <option value="">Select Department</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="checkbox-container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-check">
                        <input asp-for="IsITRelated" class="form-check-input" type="checkbox">
                        <label asp-for="IsITRelated" class="form-check-label">IT Related</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check">
                        <input asp-for="NoPORequired" class="form-check-input" type="checkbox">
                        <label asp-for="NoPORequired" class="form-check-label">No PO Required</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ExpectedDeliveryDate" class="form-label">Expected Delivery Date</label>
                    <input asp-for="ExpectedDeliveryDate" class="form-control" type="date">
                    <span asp-validation-for="ExpectedDeliveryDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="QuotationCurrency" class="form-label">Quotation Currency</label>
                    <select asp-for="QuotationCurrency" class="form-select" asp-items="@(new SelectList(ViewBag.Currencies))">
                        <option value="">Select Currency</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="DeliveryAddress" class="form-label">Delivery Address</label>
            <textarea asp-for="DeliveryAddress" class="form-control" rows="3"></textarea>
        </div>
    </div>

    <!-- Contact Information Section -->
    <div class="form-section">
        <h4 class="section-title"><i class="fas fa-address-book me-2"></i>Contact Information</h4>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ContactPerson" class="form-label">Contact Person</label>
                    <input asp-for="ContactPerson" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ContactPhoneNo" class="form-label">Contact Phone No</label>
                    <input asp-for="ContactPhoneNo" class="form-control">
                </div>
            </div>
        </div>
    </div>

    <!-- Purchase Details Section -->
    <div class="form-section">
        <h4 class="section-title"><i class="fas fa-shopping-cart me-2"></i>Purchase Details</h4>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="TypeOfPurchase" class="form-label">Type of Purchase</label>
                    <select asp-for="TypeOfPurchase" class="form-select" asp-items="@(new SelectList(ViewBag.PurchaseTypes))">
                        <option value="">Select Type</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ShortDescription" class="form-label">Short Description</label>
                    <input asp-for="ShortDescription" class="form-control">
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Reason" class="form-label">Reason</label>
            <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Remarks" class="form-label">Remarks</label>
            <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
        </div>

        <div class="checkbox-container">
            <div class="form-check">
                <input asp-for="SignedPDF" class="form-check-input" type="checkbox">
                <label asp-for="SignedPDF" class="form-check-label">Signed/PDF</label>
            </div>
        </div>
    </div>

    <!-- Submit Buttons -->
    <div class="form-section">
        <div class="d-flex justify-content-end gap-3">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Update Purchase Requisition
            </button>
        </div>
    </div>



</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}