@model TradingLimitMVC.Models.PurchaseRequisition
@{
    ViewData["Title"] = "PR Submitted Successfully";
}

<style>
    .confirmation-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 40px 0;
    }

    .confirmation-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 50px;
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
    }

    .success-icon {
        font-size: 80px;
        color: #28a745;
        margin-bottom: 20px;
        animation: scaleIn 0.5s ease;
    }

    @@keyframes scaleIn {
        from {
            transform: scale(0);
        }

        to {
            transform: scale(1);
        }
    }

    .pr-reference {
        font-size: 28px;
        font-weight: 700;
        color: #0066cc;
        margin: 20px 0;
    }

    .approval-info {
        background: linear-gradient(145deg, #f8f9fa, #e9ecef);
        padding: 30px;
        border-radius: 12px;
        margin: 30px 0;
        text-align: left;
        border-left: 5px solid #0066cc;
    }

    .workflow-preview {
        background: white;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }

    .btn-action-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 30px;
    }

    .btn-action {
        padding: 15px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        font-size: 16px;
    }

    .btn-view {
        background: linear-gradient(45deg, #007bff, #0056b3);
        color: white;
    }

    .btn-list {
        background: #6c757d;
        color: white;
    }

    .btn-auto-approve {
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

    .btn-action:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        color: white;
    }
</style>

<div class="confirmation-container">
    <div class="container">
        <div class="confirmation-card">
            <i class="fas fa-check-circle success-icon"></i>
            <h2>Purchase Requisition Submitted Successfully!</h2>
            <div class="pr-reference">@Model.PRReference</div>
            <p style="color: #666; font-size: 16px;">Your PR has been submitted and sent to the approval workflow.</p>

            <div class="approval-info">
                <h5 style="color: #0066cc; margin-bottom: 20px; font-size: 18px;">
                    <i class="fas fa-route"></i> Approval Workflow Information
                </h5>

                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Total Amount:</strong> @Model.QuotationCurrency @Model.TotalAmount.ToString("N2")</p>
                        <p><strong>Total Approval Steps:</strong> @Model.TotalApprovalSteps</p>
                        <p><strong>Current Step:</strong> @Model.CurrentApprovalStep of @Model.TotalApprovalSteps</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Submitted By:</strong> @Model.SubmittedByEmail</p>
                        <p><strong>Submitted Date:</strong> @Model.SubmittedDate?.ToString("MMM dd, yyyy HH:mm")</p>
                        @{
                            var firstStepApprovers = Model.WorkflowSteps
                            .Where(s => s.StepOrder == 1)
                            .Select(s => s.ApproverEmail)
                            .ToList();
                        }
                        @if (firstStepApprovers.Count > 1)
                        {
                            <p><strong>First Approvers:</strong> @string.Join(", ", firstStepApprovers)</p>
                        }
                        else if (firstStepApprovers.Any())
                        {
                            <p><strong>First Approver:</strong> @firstStepApprovers.First()</p>
                        }
                    </div>
                </div>

                <div class="workflow-preview">
                    <strong style="color: #0066cc;">Next Steps:</strong>
                    <ol style="text-align: left; margin-top: 10px; padding-left: 20px;">
                        @{
                            var groupedSteps = Model.WorkflowSteps
                            .OrderBy(s => s.StepOrder)
                            .GroupBy(s => s.StepOrder)
                            .Take(3)
                            .ToList();
                        }

                        @foreach (var stepGroup in groupedSteps)
                        {
                            var steps = stepGroup.ToList();
                            @if (steps.Count > 1)
                            {
                                <li>
                                    <strong>Parallel Approval (@steps.Count approvers):</strong>
                                    <ul style="margin-top: 5px;">
                                        @foreach (var step in steps)
                                        {
                                            <li>
                                                <strong>@step.ApproverRole:</strong>
                                                @if (!string.IsNullOrEmpty(step.ApproverEmail))
                                                {
                                                    <strong>@step.ApproverEmail</strong>
                                                   @*  @if (!string.IsNullOrEmpty(step.ApproverName))
                                                    {
                                                        <span style="color: #666;">(@step.ApproverName)</span>
                                                    } *@
                                                }
                                                else
                                                {
                                                    @step.ApproverName
                                                }
                                                <span style="color: #666;"> - @step.Department</span>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {
                                var step = steps.First();
                                <li>
                                    <strong>@step.ApproverRole:</strong>
                                    @if (!string.IsNullOrEmpty(step.ApproverEmail))
                                    {
                                        <strong style="color: #0066cc;">@step.ApproverEmail</strong>
                                        @* @if (!string.IsNullOrEmpty(step.ApproverName))
                                        {
                                            <span style="color: #666;">(@step.ApproverName)</span>
                                        } *@
                                    }
                                    else
                                    {
                                        @step.ApproverName
                                    }
                                    <span style="color: #666;"> - @step.Department</span>
                                </li>
                            }
                        }

                        @if (Model.WorkflowSteps.Select(s => s.StepOrder).Distinct().Count() > 3)
                        {
                            var remainingSteps = Model.WorkflowSteps.Select(s => s.StepOrder).Distinct().Count() - 3;
                            <li><em>... and @remainingSteps more approval step(s)</em></li>
                        }
                    </ol>
                </div>
            </div>

            <div style="background: #fff3cd; padding: 15px; border-radius: 8px; margin: 20px 0; border-left: 4px solid #ffc107;">
                <p style="margin: 0; color: #856404;">
                    <i class="fas fa-info-circle"></i>
                    You will receive notifications as your PR progresses through the approval workflow.
                </p>
            </div>

            <div class="btn-action-group">
                <a href="@Url.Action("Details", new { id = Model.Id })" class="btn-action btn-view">
                    <i class="fas fa-eye"></i> View PR Details
                </a>

                <a href="@Url.Action("Index")" class="btn-action btn-list">
                    <i class="fas fa-list"></i> Back to PR List
                </a>

                @* AUTO-APPROVE BUTTON - For Testing Only *@
                <form method="post" asp-action="SimulateAllApprovals" asp-route-id="@Model.Id" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn-action btn-auto-approve"
                            onclick="return confirm('⚡ AUTO-APPROVE ALL STEPS?\n\nThis will instantly approve all @Model.TotalApprovalSteps approval steps and mark the PR as fully approved.\n\nThis is for TESTING purposes only.\n\nContinue?');">
                        <i class="fas fa-check-double"></i> AUTO-APPROVE
                    </button>
                </form>
            </div>

            <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #e9ecef; color: #999; font-size: 14px;">
                <p>PR Reference: <strong>@Model.PRReference</strong> | Status: <strong>@Model.StatusDisplayName</strong></p>
            </div>
        </div>
    </div>
</div>