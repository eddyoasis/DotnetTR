@model List<TradingLimitMVC.Models.PurchaseRequisition>
@{
    ViewData["Title"] = "Purchase Requisitions - Pending Approval List";
}
<style>
    .backtable{
        background: linear-gradient(135deg, #0066cc, #004499);
    }
</style>
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2> Purchase Requisitions - Pending Approval</h2>
        <a asp-controller="PurchaseRequisition" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to All PRs
        </a>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No purchase requisitions pending approval.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header backtable text-white">
                <i class="fas fa-list"></i> Pending Approvals (@Model.Count)
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>PR Reference</th>
                                <th>Submitted By</th>
                                <th>Submitted Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Next Approver</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var pr in Model)
                            {
                                //  Null-safe way to get next approver
                                var nextStep = pr.WorkflowSteps?
                                .Where(s => s.Status == ApprovalStatus.Pending)
                                .OrderBy(s => s.StepOrder)
                                .FirstOrDefault();
                                <tr>
                                    <td>
                                        <strong>@(pr.PRReference ?? "N/A")</strong><br />
                                        <small class="text-muted">@(pr.PRInternalNo ?? "")</small>
                                    </td>
                                    <td>@(pr.SubmittedBy ?? "Unknown")</td>
                                    <td>@(pr.SubmittedDate?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                                    <td>
                                        <strong>@(pr.QuotationCurrency ?? "SGD") @pr.TotalAmount.ToString("N2")</strong>
                                        @if (!string.IsNullOrEmpty(pr.QuotationCurrency) && pr.QuotationCurrency != "SGD")
                                        {
                                            <br />
                                            <small class="text-muted">SGD @pr.ContractValueSGD.ToString("N2")</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-warning text-dark">
                                            @pr.StatusDisplayName
                                        </span>
                                    </td>
                                    <td>
                                        @if (nextStep != null)
                                        {
                                            <div>
                                                <strong>@(nextStep.ApproverRole ?? "Unknown Role")</strong><br />
                                                <small class="text-muted">@(nextStep.ApproverName ?? "Unknown")</small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="ApproveStep"
                                               asp-route-id="@pr.Id"
                                               asp-route-approverRole="@(nextStep?.ApproverRole ?? "")"
                                               class="btn btn-sm btn-success"
                                               title="Approve/Reject">
                                                <i class="fas fa-check-circle"></i> Process
                                            </a>
                                            <a asp-action="Details"
                                               asp-controller="PurchaseRequisition"
                                               asp-route-id="@pr.Id"
                                               class="btn btn-sm btn-info"
                                               title="View Details">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <small class="text-muted">
                <i class="fas fa-info-circle"></i>
                Showing @Model.Count pending purchase requisition(s) awaiting your approval action.
            </small>
        </div>
    }
</div>
@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}