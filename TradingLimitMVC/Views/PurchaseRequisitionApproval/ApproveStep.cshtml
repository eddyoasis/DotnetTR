@model TradingLimitMVC.Models.ViewModels.ApprovalViewModel
@{
    ViewData["Title"] = "Approve Purchase Requisition";
    var currentStep = ViewBag.CurrentStep as ApprovalWorkflowStep;
}
<style>
    .approval-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    .approval-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        max-width: 1200px;
    }

    .header-section {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        padding: 25px;
        text-align: center;
        border-radius: 15px 15px 0 0;
    }

    .pr-details {
        padding: 30px;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 20px 0;
    }

    .info-item {
        padding: 15px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #28a745;
    }

    .info-label {
        font-weight: 600;
        color: #666;
        font-size: 13px;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 16px;
        color: #333;
        font-weight: 500;
    }

    .items-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 14px;
    }

        .items-table th {
            background: #28a745;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .items-table td {
            padding: 12px;
            border-bottom: 1px solid #dee2e6;
        }

        .items-table tr:hover {
            background: #f8f9fa;
        }

    .approval-form {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 10px;
        margin: 20px 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 2px solid #dee2e6;
        border-radius: 8px;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: #28a745;
            outline: none;
        }

    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }

    .btn-approve {
        background: linear-gradient(45deg, #28a745, #20c997);
        color: white;
        padding: 15px 40px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        font-size: 16px;
    }

        .btn-approve:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }

    .btn-reject {
        background: linear-gradient(45deg, #dc3545, #c82333);
        color: white;
        padding: 15px 40px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        font-size: 16px;
    }

        .btn-reject:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
        }

    .workflow-progress {
        margin: 30px 0;
        padding: 20px;
        background: white;
        border-radius: 10px;
        border: 2px solid #28a745;
    }

    .approval-history {
        margin-top: 30px;
    }

    .history-item {
        padding: 15px;
        margin: 10px 0;
        background: white;
        border-radius: 8px;
        border-left: 4px solid #28a745;
    }
</style>
<div class="approval-container">
    <div class="approval-card">
        <div class="header-section">
            <h1>Purchase Requisition Approval</h1>
            <p>@Model.PurchaseRequisition.PRReference - Step @Model.PurchaseRequisition.CurrentApprovalStep of @Model.PurchaseRequisition.TotalApprovalSteps</p>
            <p><strong>Your Role: @currentStep.ApproverRole</strong></p>
        </div>
        <div class="pr-details">
            <h4 style="color: #28a745; margin-bottom: 20px;">Request Details</h4>

            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label">Company</div>
                    <div class="info-value">@Model.PurchaseRequisition.Company</div>
                </div>
                @* <div class="info-item">
                    <div class="info-label">Department</div>
                    <div class="info-value">@Model.PurchaseRequisition.Department</div>
                </div> *@
                <div class="info-item">
                    <div class="info-label">Total Amount</div>
                    <div class="info-value" style="color: #28a745; font-size: 20px;">@Model.PurchaseRequisition.TotalAmount.ToString("C")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Submitted By</div>
                    <div class="info-value">@Model.PurchaseRequisition.SubmittedBy</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Submitted Date</div>
                    <div class="info-value">@Model.PurchaseRequisition.SubmittedDate?.ToString("MMM dd, yyyy")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Description</div>
                    <div class="info-value">@Model.PurchaseRequisition.ShortDescription</div>
                </div>
            </div>
            <!-- Purchase Items -->
            @if (Model.PurchaseRequisition.Items?.Any() == true)
            {
                <h5 style="margin: 30px 0 15px 0; color: #28a745;">Purchase Items</h5>
                <table class="items-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Description</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int idx = 1;
                        }
                        @foreach (var item in Model.PurchaseRequisition.Items)
                        {
                            <tr>
                                <td>@idx</td>
                                <td>@item.Description</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td><strong>@item.Amount.ToString("C")</strong></td>
                            </tr>
                            idx++;
                        }
                    </tbody>
                    <tfoot>
                        <tr style="background: #f8f9fa; font-weight: bold;">
                            <td colspan="4" style="text-align: right;">Total Amount (Including GST):</td>
                            <td>@Model.PurchaseRequisition.TotalAmount.ToString("C")</td>
                        </tr>
                    </tfoot>
                </table>
            }
            <!-- Approval History -->
            @if (Model.ApprovalHistory?.Any() == true)
            {
                <div class="approval-history">
                    <h5 style="color: #28a745; margin-bottom: 15px;">Approval History</h5>
                    @foreach (var approval in Model.ApprovalHistory)
                    {
                        <div class="history-item">
                            <strong>@approval.ApproverRole - @approval.ApproverName</strong>
                            <span style="float: right; color: @(approval.Status == ApprovalStatus.Approved ? "#28a745" : "#dc3545")">
                                @approval.Status
                            </span>
                            <div style="margin-top: 8px; color: #666;">
                                @approval.Comments
                            </div>
                            <small style="color: #999;">@approval.ApprovalDate.ToString("MMM dd, yyyy HH:mm")</small>
                        </div>
                    }
                </div>
            }
            <!-- Approval Form -->
            <div class="approval-form">
                <h5 style="color: #28a745; margin-bottom: 20px;">Your Decision</h5>
                <form asp-action="ProcessApprovalStep" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.PurchaseRequisition.Id" />
                    <input type="hidden" name="approverRole" value="@ViewBag.CurrentApproverRole" />

                    <div class="form-group">
                        <label class="form-label">Comments / Remarks <span style="color: red;">*</span></label>
                        <textarea name="comments" class="form-control" rows="5"
                                  placeholder="Enter your comments or remarks here..."></textarea>
                    </div>
                    <div class="action-buttons">
                        <button type="submit" name="action" value="approve" class="btn-approve"
                                onclick="return confirm('Are you sure you want to APPROVE this Purchase Requisition?');">
                            APPROVE
                        </button>
                        <button type="submit" name="action" value="reject" class="btn-reject"
                                onclick="return confirm('Are you sure you want to REJECT this Purchase Requisition?');">
                            ✗ REJECT
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>